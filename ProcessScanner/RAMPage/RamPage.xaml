<Page x:Class="ProcessScanner.RAMPage.RamPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProcessScanner.RAMPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RamPage">

    <Grid>
        <Grid Name="RamCircle">
            <TextBlock Text="Загруженность оперативной памяти" Foreground="White" Margin="300,50,240,0" FontSize="18" VerticalAlignment="Top" />

            <Ellipse Width="200" Height="200" StrokeThickness="2" Margin="0,0,0,70" Stroke="#444444"/>

            <TextBlock x:Name="ramUsageText" TextAlignment="Center" FontSize="20" Foreground="White" Margin="10,160,0,0" FontStyle="Italic" Panel.ZIndex="1"/>
            <TextBlock x:Name="ramMemoryUsage" TextAlignment="Center" FontSize="20" Foreground="White" Margin="10,200,0,0" FontStyle="Italic" Panel.ZIndex="1"/>

            <Ellipse x:Name="ellipseRam" Width="194.5" Height="194.5" StrokeThickness="0" Margin="0,0,0,70">
                <Ellipse.Fill>
                    <SolidColorBrush x:Name="ellipseFillBrush" Color="Transparent"/>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>
    </Grid>
</Page>
